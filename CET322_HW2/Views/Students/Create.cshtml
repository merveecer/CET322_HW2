@model StudentModel
@{
    ViewData["Title"] = "Student Create";
}

<h2>Add new student</h2>
<div class="row">
    <div class="container">

        <form asp-controller="Students" asp-action="Create" method="post">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class=" input-group mb-2">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(x => x.Name)
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control" })
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
            </div>
            <div class="row">
                <div class="input-group mb-2">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(x => x.Surname)
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(x => x.Surname, null, new { @class = "form-control" })
                    </div>
                    <span asp-validation-for="Surname" class="text-danger"></span>

                </div>

            </div>
            <div class="row">
                <div class="input-group mb-2">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(x => x.SchoolNumber)
                    </div>
                    <div class=" col-md-7">
                        @Html.TextBoxFor(x => x.SchoolNumber, null, new { @class = "form-control" })
                    </div>
                    <span asp-validation-for="SchoolNumber" class="text-danger"></span>

                </div>

            </div>

            <div class="row">
                <div class="input-group mb-2">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(x => x.Email)
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(x => x.Email, null, new { @class = "form-control" })
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            </div>
            <div class="row">
                <div class="input-group mb-2">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(x => x.SelectedDepartmentId)
                    </div>
                    <div class="col-md-7">
                        @Html.DropDownListFor(x => x.SelectedDepartmentId, Model.AvailableDepartments, new { @class = "form-control" })
                    </div>
                    <span asp-validation-for="SelectedDepartmentId" class="text-danger"></span>

                </div>
            </div>
            <button type="submit" class=" btn btn-success"> <i class="fa fa-save"></i>  Save</button>
            <button type="button" id="cancelbtn" class=" btn btn-danger"> <i class="fa fa-cancel"></i>  Cancel</button>
        </form>
    </div>
</div>
<script type="text/javascript">


     $(document).ready(function () {
            $("#cancelbtn").click(function () {
                window.location = "@Url.Action("StudentList", "Students")";
            });
        });

</script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>