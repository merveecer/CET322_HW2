@model List<DepartmentModel>
@{
    ViewData["Title"] = "Department List";
}

<h2>Department List</h2>
<div class="container">
    <div class="row">

        <div class="col-md-5" style="padding-bottom:30px; padding-top:20px;">
            <a asp-action="Create" class="btn btn-success" style="text-align:center;"><i class="fas fa-plus"></i>  Add new department </a>
        </div>

    </div>
    <div class="row">
        @foreach (var department in Model)
        {
            <div class="col-md-4">
                <div class="card" style="padding:10px; margin-bottom:15px;">
                    <div class="card-body" align="left">
                        <h4>@department.Name</h4>
                         <a asp-action="Detail" asp-route-id="@department.Id" class="btn btn-secondary" style="text-align:center;"> Detail </a>
                        <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-primary" style="text-align:center;"><i class="fa fa-edit"></i>  Edit </a>
                        <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger" style="text-align:center;"><i class="fa fa-trash-alt"></i>  Delete </a>

                    </div>
                </div>
            </div>
        }

    </div>
</div>




